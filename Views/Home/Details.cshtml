<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mt-3 mb-3">Dettaglio Post</h1>

            </div>



            @*Codice da migliorare *@
            <div class="dettaglio">

                


            </div>

        </div>
    </div>
</div>

@section Scripts {

<script type="text/javascript">

        loaddati();

        function loaddati()
        {
           let id = parseInt(@ViewData["id"]);

            axios.get(`https://localhost:5000/api/posts/${id}`).then((res) => {

            console.log('risposta', res);

            if (res.data.length == 0) {

                console.log("Errore");

            } else {

               

                    document.querySelector('.dettaglio').innerHTML = 
                        `
                        <tr>
	                        
                            <td class="image"><img src="${ res.data.image}"></td>
	                        <td class="title">${ res.data.title}</td>
	                        <td class="description">${ res.data.description}</td>
	                        
                        </tr>
                        `;
                
            }
        });

   
        }

</script>

}